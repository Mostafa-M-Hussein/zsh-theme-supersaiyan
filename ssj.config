# ============================================================
# Super Saiyan Prompt - Configuration File
# ============================================================
# Edit this file to customize your transformation experience!

# ============================================================
# Feature Toggles
# ============================================================

# Enable/disable transformation animations (true/false)
SSJ_ENABLE_ANIMATIONS=true

# Enable/disable wallpaper changes (true/false)
SSJ_ENABLE_WALLPAPER=true

# Enable/disable sound effects (true/false)
SSJ_ENABLE_SOUND=true

# ============================================================
# Animation Settings
# ============================================================

# Animation duration in seconds (recommended: 4-5 for maximum power)
SSJ_ANIMATION_DURATION=4

# Show ASCII art during transformation (true/false)
SSJ_SHOW_ASCII_ART=true

# ============================================================
# Wallpaper Settings
# ============================================================

# Wallpaper tool (swww or hyprpaper)
SSJ_WALLPAPER_TOOL=swww

# swww transition type (simple, fade, wipe, grow, outer, random)
SSJ_TRANSITION_TYPE=fade

# swww transition duration in seconds
SSJ_TRANSITION_DURATION=2

# Wallpaper paths for each transformation level
# Replace these with your own wallpaper paths!
SSJ1_WALLPAPER="$HOME/.config/supersaiyan/wallpapers/ssj1.jpg"
SSJ2_WALLPAPER="$HOME/.config/supersaiyan/wallpapers/ssj2.jpg"
SSJ3_WALLPAPER="$HOME/.config/supersaiyan/wallpapers/ssj3.jpg"

# ============================================================
# Sound Settings
# ============================================================

# Audio player (mpv, paplay, or ffplay)
SSJ_AUDIO_PLAYER=mpv

# Sound file paths for each transformation level
# Replace these with your own sound files!
SSJ1_SOUND="$HOME/.config/supersaiyan/sounds/ssj1.mp3"
SSJ2_SOUND="$HOME/.config/supersaiyan/sounds/ssj2.mp3"
SSJ3_SOUND="$HOME/.config/supersaiyan/sounds/ssj3.mp3"

# mpv volume (0-100)
SSJ_SOUND_VOLUME=100

# Sound plays once at full duration (no looping)
# Use sound files longer than 5 seconds for extended transformation audio!

# ============================================================
# Advanced Settings
# ============================================================

# Clear screen before transformation animation (true/false)
SSJ_CLEAR_SCREEN=false

# Show power level messages (true/false)
SSJ_SHOW_POWER_LEVEL=true

# Use color effects in animations (true/false)
SSJ_COLOR_EFFECTS=true

# ============================================================
# Visual Effects
# ============================================================

# Screen flash effects during energy burst (true/false)
SSJ_SCREEN_FLASH=true

# Change terminal title during transformation (true/false)
SSJ_TERMINAL_TITLE=true

# ============================================================
# ULTRA INSTINCT Settings - THE ULTIMATE TRANSFORMATION!
# ============================================================

# Enable/disable Ultra Instinct transformation (true/false)
SSJ_UI_ENABLED=true

# Ultra Instinct animation duration in seconds (8 seconds of INSANITY!)
SSJ_UI_ANIMATION_DURATION=8

# Wallpaper and sound paths for Ultra Instinct
UI_WALLPAPER="$HOME/.config/supersaiyan/wallpapers/ui.jpg"
UI_SOUND="$HOME/.config/supersaiyan/sounds/ui.mp3"

# ============================================================
# Ultra Instinct Visual Effects (ALL ENABLED BY DEFAULT!)
# ============================================================

# Shockwave animation - expanding rings of energy (true/false)
SSJ_UI_SHOCKWAVE=true

# Particle explosion - energy bursting from center (true/false)
SSJ_UI_PARTICLES=true

# Matrix rain effect - silver characters cascading (true/false)
SSJ_UI_MATRIX_RAIN=true

# Color inversion flash - rapid screen inversion (true/false)
SSJ_UI_COLOR_INVERT=true

# Screen shake effect - simulated power impact (true/false)
SSJ_UI_SCREEN_SHAKE=true

# Animated power counter - rising to âˆž IMMEASURABLE (true/false)
SSJ_UI_POWER_COUNTER=true

# Layered wallpaper transitions - multiple effects in sequence (true/false)
SSJ_UI_LAYERED_WALLPAPER=true

# Full screen mode - optional immersive transformation (true/false)
SSJ_UI_FULL_SCREEN=false

# ============================================================
# Enhanced Terminal Effects
# ============================================================

# Enable visual effects during transformations (true/false)

# Color waves/gradients sweeping across screen
SSJ_ENABLE_COLOR_WAVES=true

# Lightning bolt ASCII art flashing with screen effects
SSJ_ENABLE_LIGHTNING=true

# Energy aura border pulsing around terminal edges
SSJ_ENABLE_ENERGY_AURA=true

# Character glitch/corruption effect for chaotic energy
SSJ_ENABLE_CHARACTER_GLITCH=true

# Terminal opacity pulsing during energy bursts
SSJ_ENABLE_OPACITY_PULSE=true

# Ultra Instinct peak transformation - the ultimate climax moment!
# This is a 6-stage epic transformation that occurs AFTER all other UI effects
SSJ_ENABLE_UI_PEAK=true

# Dynamic terminal background color matching transformation level
# Changes terminal background color to match each SSJ level
# SSJ1=Dark Golden, SSJ2=Dark Electric Blue, SSJ3=Dark Magenta, UI=Dark Silver
# NOTE: Requires terminal with OSC 11 support (Alacritty, Kitty, WezTerm)
# Set to false if you prefer default black background
SSJ_ENABLE_TERMINAL_BG=true

# ============================================================
# Animated Wallpaper Settings (mpvpaper Support!)
# ============================================================

# Wallpaper mode: static, animated, or auto
# - static: Use swww/hyprpaper with static images only
# - animated: Use mpvpaper with animated videos only
# - auto: Try animated first, fallback to static if mpvpaper unavailable (recommended)
SSJ_WALLPAPER_MODE=auto

# Animated wallpaper paths (MP4 format)
# Place your MP4 wallpapers in ~/.config/supersaiyan/wallpapers/animated/
SSJ1_WALLPAPER_ANIMATED="$HOME/.config/supersaiyan/wallpapers/animated/ssj1.mp4"
SSJ2_WALLPAPER_ANIMATED="$HOME/.config/supersaiyan/wallpapers/animated/ssj2.mp4"
SSJ3_WALLPAPER_ANIMATED="$HOME/.config/supersaiyan/wallpapers/animated/ssj3.mp4"
UI_WALLPAPER_ANIMATED="$HOME/.config/supersaiyan/wallpapers/animated/ui.mp4"

# mpvpaper options for animated wallpapers
# Default: loop video, fill screen, no audio
SSJ_MPVPAPER_OPTIONS="--fork --mpv-options='--loop-file=inf --panscan=1.0 --no-audio'"
